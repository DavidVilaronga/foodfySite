<!DOCTYPE html>
<html>

    <head>
        <title>Foodfy</title>
        <link rel="stylesheet" href="/styles.css">
    
    </head>

    <body>

        {%block header%}
            <header>
                <div class="header">
                    <a href="/" class="logo"><img src="/assets/logo.png"  alt="logo"></a>
                    
                    <a href="/about" class="sobre">Sobre</a>
                    <a href="/recipe" class="sobre">Receitas</a>
                    <a href="/chefs" class="sobre">Chefs</a>

                    <form action="/recipe" id="get" method="get">
                        <input 
                            type="text"
                            name="filter"
                            placeholder="Buscar uma receita"
                            value={{filter}}    
                        >
                    </form>
                    <button type="submit" form="get">Buscar</button>

                </div>
                
            </header>
        {%endblock%}

        <section>

            {%block content%}

            {%endblock%}

        <script src="/scripts.js"></script>

        </section>

        <script>
            const currentPage = location.pathname
            const menuItems = document.querySelectorAll('header div.header a')

            for ( item of menuItems ) {
                if (currentPage.includes(item.getAttribute("href"))) {
                    item.classList.add("active")
                }
            }
        </script>

        <footer class="footer">
            <h1>Todos direitos reservados, receitas Foodfy</h1>
        </footer>
        
    </body>

    

</html>